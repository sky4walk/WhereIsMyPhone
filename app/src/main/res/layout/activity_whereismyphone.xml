<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WhereIsMyPhoneServiceActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />


        <Button
            android:id="@+id/start_service"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/start_service"
            android:layout_below="@+id/textView" />

        <Button
            android:id="@+id/stop_Service"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_service"
            android:layout_below="@+id/start_service"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_mail"
            android:layout_below="@+id/stop_Service"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="MailAddress"
            android:layout_alignRight="@+id/start_service"
            android:layout_alignEnd="@+id/start_service" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_user"
            android:layout_below="@+id/et_id_mail"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="MailUser"
            android:layout_alignRight="@+id/et_id_pw"
            android:layout_alignEnd="@+id/et_id_pw" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_pw"
            android:layout_below="@+id/et_id_user"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="MailPassword"
            android:layout_alignRight="@+id/et_id_mailTo"
            android:layout_alignEnd="@+id/et_id_mail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_mailTo"
            android:layout_below="@+id/et_id_pw"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="MailTo"
            android:layout_alignRight="@+id/et_id_host"
            android:layout_alignEnd="@+id/et_id_mail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_host"
            android:layout_below="@+id/et_id_mailTo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="MailHost"
            android:layout_alignRight="@+id/et_id_subjectAdd"
            android:layout_alignEnd="@+id/et_id_mail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_subjectAdd"
            android:layout_below="@+id/et_id_host"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="SubjectAdd"
            android:layout_alignRight="@+id/et_id_mail"
            android:layout_alignEnd="@+id/et_id_mail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_Port"
            android:layout_below="@+id/et_id_subjectAdd"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="HostPort"
            android:layout_alignRight="@+id/et_id_mail"
            android:layout_alignEnd="@+id/et_id_mail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_id_Delay"
            android:layout_below="@+id/et_id_Port"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Delay"
            android:layout_alignRight="@+id/et_id_mail"
            android:layout_alignEnd="@+id/et_id_mail" />
    </RelativeLayout>
